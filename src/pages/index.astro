---
import Avatar from "../components/Avatar.astro";
import Projects from "../components/Projects.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SocialMediaBar from "../components/SocialMediaBar.astro";
import TimeLine from "../components/TimeLine.astro";
import Titles from "../components/Titles.astro";
import IconCode from "../icons/IconCode.astro";
import IconWork from "../icons/IconWork.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Portfolio Paco Acosta | Desarrollador y Programador Web con +16 años de experiencia."
  description="Contrata a Paco para crear tu aplicación web. Desarrollador y Programador. Especializado en crear aplicaciones únicas."
>
  <main class="px-4">
    <!-- Headers -->
    <SectionContainer class="py-36 pb-26">
      <Avatar />
      <Titles />
      <SocialMediaBar />
    </SectionContainer>

    <!-- Timeline -->
    <SectionContainer id="experience">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-2 items-center">
        <IconWork class="size-6" />
        Experience
      </h2>
      <TimeLine />
    </SectionContainer>

    <!-- Projects -->
    <SectionContainer id="projects">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-2 items-center">
        <IconCode class="size-6" />
        Projects
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
